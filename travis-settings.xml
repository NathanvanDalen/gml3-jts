<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                          https://maven.apache.org/xsd/settings-1.0.0.xsd">
  <servers>
    <server>
      <id>bintray-pdok-maven</id>
      <username>${BINTRAY_USER}</username>
      <password>${BINTRAY_API_KEY}</password>
    </server>
    <server>
      <id>ossrh</id>
      <username>${OSSRH_USER}</username>
      <password>${OSSRH_PASSWORD}</password>
    </server>
  </servers>

  <profiles>
    <profile>
      <id>release-ossrh</id>
      <distributionManagement>
        <repository>
          <id>ossrh</id>
          <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
      </distributionManagement>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-gpg-plugin</artifactId>
            <version>1.5</version>
            <executions>
              <execution>
                <id>sign-artifacts</id>
                <phase>verify</phase>
                <goals>
                  <goal>sign</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>release-bintray</id>
      <distributionManagement>
        <repository>
          <id>bintray-pdok-maven</id>
          <name>pdok-maven</name>
          <url>https://api.bintray.com/maven/pdok/maven/gml3-jts/;publish=1</url>
        </repository>
      </distributionManagement>
    </profile>
  </profiles>

  <activeProfiles>
    <activeProfile>release-ossrh</activeProfile>
  </activeProfiles>

</settings>
